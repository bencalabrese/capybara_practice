<h1><%= @goal.body %></h1>

  <p>status: <%= @goal.completed ? "Complete" : "Incomplete" %></p>
  <p>privacy: <%= @goal.private ? "Private" : "Public" %></p>

  <% if @goal.user == current_user %>
    <%= link_to "Edit Goal", edit_goal_url(@goal) %>
    <%= button_to "Destroy Goal", goal_url(@goal), method: :delete %>
  <% end %>

  <%= link_to "Back to User", user_url(@goal.user_id) %>
